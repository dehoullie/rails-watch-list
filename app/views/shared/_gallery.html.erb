<div class="row row-cols-1 row-cols-md-3 g-4">

  <% items.each do |item| %>
    <div class="col">
      <div class="card h-100">

        <%= link_to image_tag(item.poster_url, class: 'card-img-top'), movie_path(item) %>
        <div class="card-body">
          <h5 class="card-title"><%= item.title %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
